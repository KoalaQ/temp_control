//page1,首页的界面
void page1(void){
   uint cur=0;
   uchar keyV;
   lcd_clear();//清屏幕
   lcd_write_str(1,1," T1:100");
   lcd_write_char(5,1,0xA1);
   lcd_write_char_con(1,0xE6);
	
   
    lcd_write_str(6,1," T2:800");
	lcd_write_char(10,1,0xA1);
	lcd_write_char_con(1,0xE6);
	
    lcd_write_str(1,2," T3:停止");

    lcd_write_str(6,2," T4:故障");

	
	lcd_write_str(1,3,"全部开始  ");
    lcd_write_str_con(3,"停止  ");
	lcd_write_str_con(3,"设置");
    //初始化选择反白
	cur=0;
	Set_White(1,1,2);
	while(1){
	 pageUtil();
	 keyV=KeyScan_once();
	 if(keyV=='a'){
	      //pageNum=8;//跳转到设置时间的界面
	}else if(keyV=='d'){
	     switch(cur){
		  case 0:
		   Set_White_off(1,1,2);
		   Set_White(1,2,2);
		   cur=2;
		   break;
		  case 1:
		   Set_White_off(6,1,7);
		   Set_White(6,2,7);
		   cur=3;
		   break;
		  case 2:
		   Set_White_off(1,2,2);
		   Set_White(1,3,4);
		   cur=4;
		   break;
		  case 3:
		   Set_White_off(6,2,7);
		   Set_White(6,3,7);
		   cur=5;
		   break;
		  default:
		   break;
		 }
	}else if(keyV=='u'){switch(cur){
		  case 2:
		   Set_White_off(1,2,2);
		   Set_White(1,1,2);
		   cur=0;
		   break;
		  case 3:
		   Set_White_off(6,2,7);
		   Set_White(6,1,7);
		   cur=1;
		   break;
		  case 4:
		   Set_White_off(1,3,4);
		   Set_White(1,2,2);
		   cur=2;
		   break;
		  case 5:
		   Set_White_off(6,3,7);
		   Set_White(6,2,7);
		   cur=3;
		   break;
		  case 6:
		   Set_White_off(9,3,10);
		   Set_White(6,2,7);
		   cur=3;
		   break;
		  default:
		   break;
		 }
	}else if(keyV=='l'){switch(cur){
		  case 2:
		   Set_White_off(1,2,2);
		   Set_White(1,1,2);
		   cur=0;
		   break;
		  case 3:
		   Set_White_off(6,2,7);
		   Set_White(6,1,7);
		   cur=1;
		   break;
		  case 4:
		   Set_White_off(1,3,4);
		   Set_White(1,2,2);
		   cur=2;
		   break;
		  case 5:
		   Set_White_off(6,3,7);
		   Set_White(6,2,7);
		   cur=3;
		   break;
		  case 6:
		   Set_White_off(9,3,10);
		   Set_White(6,2,7);
		   cur=3;
		   break;
		  default:
		   break;
		 }
	}else if(keyV=='r'){switch(cur){
		  case 2:
		   Set_White_off(1,2,2);
		   Set_White(1,1,2);
		   cur=0;
		   break;
		  case 3:
		   Set_White_off(6,2,7);
		   Set_White(6,1,7);
		   cur=1;
		   break;
		  case 4:
		   Set_White_off(1,3,4);
		   Set_White(1,2,2);
		   cur=2;
		   break;
		  case 5:
		   Set_White_off(6,3,7);
		   Set_White(6,2,7);
		   cur=3;
		   break;
		  case 6:
		   Set_White_off(9,3,10);
		   Set_White(6,2,7);
		   cur=3;
		   break;
		  default:
		   break;
		 }
	}else if(keyV=='s'){
	}else if(keyV=='e'){
	}
  }
   return;
}
