#define  SCL_H  PORTD|=1<<PD0 //
#define  SCL_L  PORTD&=~(1<<PD0) //
#define  SDA_in   PORTD&(~(1<<PD1)) //会获得PB1的值，判断是否等于0来确定值
#define  SDA_H   PORTD|=1<<PD1 //
