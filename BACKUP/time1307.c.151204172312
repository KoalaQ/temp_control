   unsigned char i,temp,data=0;
   CE_L;
   SCLK_L;
   CE_H;//发送地址?
   for(i=8;i>0;i--)//循环8次移位
   {
      
	   temp=addr;
      if((temp&0x01))//每次传输低字节
	   {
	   	DIO_H;
	   }else{
	   DIO_L;
	   }
	   SCLK_L;
       addr>>=1;//右移一位
	  SCLK_H;
   }
//读取数据
DDRD&=0xFD;
 for(i=0;i<8;i++)
  {
