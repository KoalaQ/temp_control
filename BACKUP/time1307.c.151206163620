/******************************** DS1307 写数据  ****************/
void Write1307(unsigned char add,unsigned char dat)
{
  I2C_start();
  I2C_write_byte(WRITEDS1307);
  I2C_write_byte(add);
  I2C_write_byte(dat);
  I2C_stop();
}
/***********************************************************************/
unsigned char Read1307(unsigned char add)
{
  
  unsigned char dat;
  I2C_start1();
  I2C_write_byte1(WRITEDS1307);
  I2C_write_byte1(add);
  I2C_start1();
  I2C_write_byte1(READDS1307);
  dat=I2C_read_byte(); 
  I2C_send_noack();
  I2C_stop1();        
  return (dat);
 }
