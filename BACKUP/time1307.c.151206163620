void Read_RTC(void)
{
 unsigned char i,*p;
 p=rtc_address;
 for(i=0;i<7;i++)
 {
    read_rtc_code[i]=Read1307(*p);
    p++;
  }
}
void Read_RTC_j1_j3(void)
{
 unsigned char i,*p;
 p=rtc_address;
 for(i=0;i<7;i++)
 {
  read_rtc_code[i]=Read1307(*p);
  wr_j1j3_code[i]= Read1307(*p)-jk[i];	   //读出的DS1307数据- 减去DS1307初始数据
  p++;
  }
}
