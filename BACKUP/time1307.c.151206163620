unsigned  char BP;
void time1307_init(void){
   DDRD |= 0x03;//先全部输出
}
void I2C_start(void){//启动IIC总线
   SDA_H;
   SCL_H;
   delay_us(8);
   SDA_L;
   delay_us(8);
   SCL_L;
   
}
void I2C_stop(void){//启动IIC总线
   SDA_L;
   SCL_H;
   delay_us(8);
   SDA_H;
   delay_us(8);
   SCL_L;
   
}
void I2C_send_ack(void){//应答ack
  SDA_L;
  SCL_H;
  delay_us(8);
  SCL_L;
} 
void I2C_send_noack(void){
  SDA_H;
  SCL_H;
   delay_us(8);
   SCL_L;
}
void I2C_write_byte(unsigned char IIC_data){
   unsigned char i;
   BP=0;
   for(i=0;i<8;i++){//循环输出数据
      SCL_L;
	   if((IIC_data<<i) && 0x80){
	      SDA_H;
	   }else{
	   	  SDA_L;
	   }
	   delay_us(4);
	   SCL_H;
	   delay_us(4);
	   SCL_L;
   }
   //读取ACK
   delay_us(4);
   DDRD &=~(0x02);//发送完，等待输入信号
   delay_us(4);
   if(SDA_IN==1){BP=1;}//读取，如果发送的是noack，
   SCL_H;
   delay_us(4);
   SCL_L;
   DDRD |=0x02;
}
unsigned char I2C_read_byre(void){
  unsigned char i,dat;
  DDRD &=~(0x02);
  SDA_L;
  for (i=0;i<8;i++)
    {
      dat=dat<<1;
      SCL_H;
      delay_us(4);
    if(SDA_IN)
    {
      dat++;
    }
       SCL_L;  
    }  
  DDRD |=0x02;
  return dat;
}
